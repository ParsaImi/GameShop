extends base

block content 

  main.main 
    .card-container
      each tour in tours
        .card
          .card__header
            .card__picture
              .card__picture-overlay &nbsp;
              img.card__picture-img(src=`img/tours/${tour.imageCover}`, alt=`${tour.name}`)
            h3.heading-tertirary
              span= tour.name

          .card__details
            p.card__text= tour.description 
            .card__data
              svg.card__icon
                use(xlink:href='img/icons.svg#icon-map-pin')
              span= tour.meetingLocation.description 
            .card__data
              svg.card__icon
                use(xlink:href='img/icons.svg#icon-calendar')
              span= tour.startDates[0].toLocaleString('en-us' , {month : 'long' , year : 'numeric'})
            .card__data
              svg.card__icon
                use(xlink:href='img/icons.svg#icon-flag')
              span= `${tour.shopsLocations.length} stops`
            .card__data
              svg.card__icon
                use(xlink:href='img/icons.svg#icon-user')

          .card__footer
            p
              span.card__footer-value= `$${tour.price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")}`
              span.card__footer-text per person
            p.card__ratings
              span.card__footer-value= tour.steamRating
              span.card__footer-text= `rating (${tour.ratingQuantity})`
            a.btn.btn--green.btn--small(href=`/tour/${tour.slug}`) Details